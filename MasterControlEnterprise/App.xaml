<Application x:Class="MasterControlEnterprise.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MasterControlEnterprise"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="btn_primary_border" TargetType="Border">
            <Setter Property="Background" Value="#1C3A4A" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Width" Value="600" />
        </Style>
        <Style x:Key="btn_primary" TargetType="Button">
            
            
            <Setter Property="FontSize" Value="24" />
        </Style>
        
       
    </Application.Resources>
</Application>
